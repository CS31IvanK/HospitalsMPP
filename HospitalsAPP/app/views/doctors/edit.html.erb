<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">Editing doctor</h2>
        </div>

        <div class="card-body">
          <%= render "form", doctor: @doctor %>
        </div>
      </div>

      <div class="mt-3">
        <%= link_to "Show this doctor", @doctor, class: 'btn btn-primary' %> |
        <%= link_to "Back to doctors", doctors_path, class: 'btn btn-secondary' %>
      </div>
    </div>
  </div>
</div>
