<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card"> 
        <div class="card-header text-center"> 
          <h2 class="mb-0">Інформація про лікарів</h2>
        </div>

        <%= render @doctor %>

        <div class="mt-3">
          <%= link_to "Edit this doctor", edit_doctor_path(@doctor), class: 'btn btn-primary' %> |
          <%= link_to "Back to doctors", doctors_path, class: 'btn btn-secondary' %>

          <%= button_to "Destroy this doctor", @doctor, method: :delete, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>
