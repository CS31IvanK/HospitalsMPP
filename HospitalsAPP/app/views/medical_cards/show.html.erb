<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header text-center">
          <h2 class="mb-0">Medical Card Details</h2>
        </div>

        <div class="card-body">
          <p>
            <strong>Medical Card ID:</strong>
            <%= @medical_card.medical_card_id %>
          </p>

          <p>
            <strong>Patient:</strong>
            <%= @medical_card.patient.pname %>
          </p>

          <p>
            <strong>Doctor:</strong>
            <%= @medical_card.doctor.dname %>
          </p>

          <p>
            <strong>Hospital:</strong>
            <%= @medical_card.hospital.name %>
          </p>

          <p>
            <strong>Diagnosis:</strong>
            <%= @medical_card.diagnosis %>
          </p>
        </div>

        <div class="mt-3">
          <%= link_to 'Edit', edit_medical_card_path(@medical_card), class: 'btn btn-primary' %> |
          <%= link_to 'Back', medical_cards_path, class: 'btn btn-secondary' %>
          <%= button_to "Destroy", @medical_card, method: :delete, data: { confirm: "Are you sure?" }, class: "btn btn-danger", remote: true %>
        </div>
      </div>
    </div>
  </div>
</div>
