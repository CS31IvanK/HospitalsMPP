<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header text-center bg-primary text-white">
          <h2 class="mb-0">Medical Record Details</h2>
        </div>

        <div class="card-body">
          <p class="mb-2">
            <strong>Medical Card ID:</strong>
            <%= @medical_card.medical_card_id %>
          </p>

          <p class="mb-2">
            <strong>Patient:</strong>
            <%= @medical_card.patient.pname %>
          </p>

          <p class="mb-2">
            <strong>Hospital:</strong>
            <%= @medical_card.hospital.name %>
          </p>
        </div>

        <div class="mt-3 text-center">
          <%= link_to 'Back', medical_cards_path, class: 'btn btn-secondary btn-lg' %>
        </div>
      </div>
    </div>
  </div>
</div>
