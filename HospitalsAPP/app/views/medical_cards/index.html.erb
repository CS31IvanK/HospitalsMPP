<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header text-center">
          <h2 class="mb-0">Patient's card</h2>
        </div>

        <div class="card-body">
          <%= link_to 'Повернутися на головну сторінку', root_path, class: 'btn btn-secondary mb-3' %>

          <% if @medical_cards.any? %>
            <table class="table">
              <thead class="thead-dark">
                <tr>
                  <th>Medical Card ID</th>
                  <th>Patient</th>
                  <th>Doctor</th>
                  <th>Hospital</th>
                  <th>Diagnosis</th>
                  <th colspan="3"></th>
                </tr>
              </thead>
              <tbody>
                <% @medical_cards.each do |medical_card| %>
                  <tr>
                    <td><%= medical_card.medical_card_id %></td>
                    <td><%= medical_card.patient.pname %></td>
                    <td><%= medical_card.doctor.dname %></td>
                    <td><%= medical_card.hospital.name %></td>
                    <td><%= medical_card.diagnosis %></td>
                    <td><%= link_to 'Show', medical_card, class: 'btn btn-info btn-sm' %></td>
                    <td><%= link_to 'Edit', edit_medical_card_path(medical_card), class: 'btn btn-warning btn-sm' %></td>
                    <td><%= link_to 'Destroy', medical_card, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger btn-sm' %></td>
                  </tr>
                <% end %>
              </tbody>
            </table>
          <% else %>
            <div class="alert alert-warning" role="alert">
              No medical cards available.
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
