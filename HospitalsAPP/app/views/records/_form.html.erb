<%= form_with(model: record) do |form| %>
  <% if record.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(record.errors.count, "error") %> prohibited this record from being saved:</h2>

      <ul>
        <% record.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :dock_id, style: "display: block" %>
    <%= form.select :dock_id, Doctor.pluck(:dname, :dock_id), prompt: "Виберіть доктора" %>
  </div>

  <div>
    <%= form.label :pat_id, style: "display: block" %>
    <%= form.select :pat_id, Patient.pluck(:pname, :pat_id), prompt: "Виберіть пацієнта" %>
  </div>
  <!-- <div>
    <%= form.label :conclusion, style: "display: block" %>
    <%= form.text_field :conclusion %>
  </div> -->

  <div>
    <%= form.submit %>
  </div>
<% end %>
