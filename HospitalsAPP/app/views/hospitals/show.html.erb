<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header text-center">
          <h2 class="mb-0">Інформація про лікарню</h2>
        </div>

        <%= render @hospital %>

        <div class="mt-3">
          <%= link_to "Edit this hospital", edit_hospital_path(@hospital), class: 'btn btn-primary' %> |
          <%= link_to "Back to hospitals", hospitals_path, class: 'btn btn-secondary' %>

          <%= button_to "Destroy this hospital", @hospital, method: :delete, class: 'btn btn-danger' %>
        </div>
      </div>
    </div>
  </div>
</div>
