<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0">Editing hospital</h2>
        </div>

        <div class="card-body">
          <%= render "form", hospital: @hospital %>
        </div>
      </div>

      <div class="mt-3">
        <%= link_to "Show this hospital", @hospital, class: 'btn btn-primary' %> |
        <%= link_to "Back to hospitals", hospitals_path, class: 'btn btn-secondary' %>
