<div class="container mt-5">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card">
        <div class="card-header">
          <h2 class="mb-0"><%= @patient.pname %></h2>
        </div>

        <div class="card-body">
          <p><strong>Address:</strong> <%= @patient.padress %></p>
          <p><strong>Phone:</strong> <%= @patient.pphone %></p>
          <p><strong>Age:</strong> <%= @patient.age %></p>
          <p><strong>Diagnosis:</strong> <%= @patient.diagnosis %></p>
          <p><strong>Doctor:</strong> <%= @doctor&.dname %></p>
        </div>
      </div>

      <div class="mt-3">
	<%= link_to "View Medical Cards", patient_medical_cards_path(@patient), class: 'btn btn-primary mr-2' %>
        <%= link_to "Edit", edit_patient_path(@patient), class: 'btn btn-primary mr-2' %>
        <%= link_to "Back to patients", patients_path, class: 'btn btn-secondary mr-2' %>
        <%= button_to "Destroy", patient_path(@patient), method: :delete, data: { confirm: "Are you sure you want to delete this patient?" }, class: 'btn btn-danger' %>
      </div>
    </div>
  </div>
</div>
